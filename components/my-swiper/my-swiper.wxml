<!--components/my-swiper/my-swiper.wxml-->
<swiper class="swiper" 
        indicator-dots 
        indicator-active-color="#ff5777" 
        autoplay interval="3000" 
        duration="300" 
        circular>
  <block wx:for="{{list}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" mode="widthFix" class="swiper-image"></image>
    </swiper-item>
  </block>
</swiper>
